<Window x:Class="AoShinhoServ_Monitor.Forms.OptionsWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AoShinhoServ_Monitor.Forms"
        xmlns:properties="clr-namespace:AoShinhoServ_Monitor.Properties"
        mc:Ignorable="d"
        Title="OptionsWnd" Height="285" Width="270" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent">
    <Grid Margin="0,0,0,-203">
        <Rectangle Fill="AntiqueWhite" RadiusX="10" RadiusY="10" HorizontalAlignment="Left" Height="280" Margin="2,1,0,0" Stroke="Black" VerticalAlignment="Top" Width="270"/>
        <Grid x:Name="OkayGrid" Margin="-34,211,129,31">
            <Rectangle x:Name="Okay_Button" HorizontalAlignment="Left" Height="40" Margin="55,15,0,0" VerticalAlignment="Top" Width="112" RadiusY="5" RadiusX="5">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF9D58" />
                        <GradientStop Color="#FFA46234" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.3" ShadowDepth="2.6" BlurRadius="3" />
                </Rectangle.Effect>
            </Rectangle>
            <Label x:Name="Okaylbl" Content="    Okay" FontSize="24" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Left" Margin="55,15,0,0" VerticalAlignment="Top" Height="40" Width="112" MouseDown="Okaylbl_MouseDown" />
        </Grid>
        <Grid x:Name="CancelGrid" Margin="86,211,-98,31">
            <Rectangle x:Name="Cancel" HorizontalAlignment="Left" Height="40" Margin="55,15,0,0" VerticalAlignment="Top" Width="112" RadiusY="5" RadiusX="5">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF9D58" />
                        <GradientStop Color="#FFA46234" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.3" ShadowDepth="2.6" BlurRadius="3" />
                </Rectangle.Effect>
            </Rectangle>
            <Label x:Name="Cancellbl" Content="   Cancel" FontSize="24" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Left" Margin="55,15,0,0" VerticalAlignment="Top" Height="40" Width="112" MouseDown="Cancellbl_MouseDown" />
        </Grid>
        <Button x:Name="LoginExePath" Content="..." HorizontalAlignment="Left" Margin="234,15,0,0" VerticalAlignment="Top" Height="18" Width="23" Click="LoginExePath_Click"/>
        <TextBox x:Name="LoginPath" ToolTip="Your Login Path Here" HorizontalAlignment="Left" Margin="57,15,0,0" TextWrapping="NoWrap" Text="{Binding Source={x:Static properties:Settings.Default}, Path=LoginPath}" VerticalAlignment="Top" Width="174"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="17,11,0,0" VerticalAlignment="Top"/>
        <Button x:Name="CharExePath" Content="..." HorizontalAlignment="Left" Margin="234,42,0,0" VerticalAlignment="Top" Height="18" Width="23" Click="CharExePath_Click"/>
        <TextBox x:Name="CharPath" ToolTip="Your Char Path Here" HorizontalAlignment="Left" Margin="57,42,0,0" TextWrapping="NoWrap" Text="{Binding Source={x:Static properties:Settings.Default}, Path=CharPath}" VerticalAlignment="Top" Width="174" BorderBrush="#FFB4B4B4"/>
        <Label Content="Char:" HorizontalAlignment="Left" Margin="19,38,0,0" VerticalAlignment="Top"/>
        <Button x:Name="MapExePath" Content="..." HorizontalAlignment="Left" Margin="234,68,0,0" VerticalAlignment="Top" Height="18" Width="23" Click="MapExePath_Click" />
        <TextBox x:Name="MapPath" ToolTip="Your Map Path Here" HorizontalAlignment="Left" Margin="57,68,0,0" TextWrapping="NoWrap" Text="{Binding Source={x:Static properties:Settings.Default}, Path=MapPath}" VerticalAlignment="Top" Width="174" BorderBrush="#FFB4B4B4"/>
        <Label Content="Map:" HorizontalAlignment="Left" Margin="19,64,0,0" VerticalAlignment="Top"/>
        <Button x:Name="WebExePath" Content="..." HorizontalAlignment="Left" Margin="234,94,0,0" VerticalAlignment="Top" Height="18" Width="23"  Click="WebExePath_Click" />
        <TextBox x:Name="WebPath" ToolTip="Your Web Path Here" HorizontalAlignment="Left" Margin="57,94,0,0" TextWrapping="NoWrap" Text="{Binding Source={x:Static properties:Settings.Default}, Path=WebPath}" VerticalAlignment="Top" Width="174" BorderBrush="#FFB4B4B4"/>
        <Label Content="Web:" HorizontalAlignment="Left" Margin="19,90,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="WhiteMode" ToolTip="Change Text Box Collors" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=WhiteMode}" Content="Enable White Mode" HorizontalAlignment="Left" Margin="31,120,0,0" VerticalAlignment="Top" Checked="WhiteMode_Checked" Unchecked="WhiteMode_Unchecked"/>
        <CheckBox x:Name="Debug" ToolTip="Ignore Loading Messages[More Faster Output]" IsChecked="{Binding DebugMode, Source={x:Static properties:Settings.Default}}" Content="Skip Loading Messages" HorizontalAlignment="Left" Margin="31,139,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="DevMode" ToolTip="Enable DevMode" IsChecked="{Binding DevMode, Source={x:Static properties:Settings.Default}}" Content="Enable Dev Mode" HorizontalAlignment="Left" Margin="32,176,0,0" VerticalAlignment="Top" Checked="DevMode_Checked" Unchecked="DevMode_Unchecked"/>
        <CheckBox x:Name="CmakeMode" ToolTip="Use CMake instead of MSBuild" IsChecked="{Binding UseCMake, Source={x:Static properties:Settings.Default}}" Content="Use CMake" HorizontalAlignment="Left" Margin="150,176,0,0" VerticalAlignment="Top" Checked="CmakeMode_Checked" Unchecked="CmakeMode_Unchecked" Width="108"/>
        <CheckBox x:Name="PreRenewalMode" ToolTip="Use Pre-Renewal Compilation" IsChecked="{Binding PreRenewal, Source={x:Static properties:Settings.Default}}" Content="PreRenewal" HorizontalAlignment="Left" Margin="93,196,0,0" VerticalAlignment="Top" Checked="PreRenewalMode_Checked" Unchecked="PreRenewalMode_Unchecked" Width="132"/>
    </Grid>
</Window>
