        </Grid.RowDefinitions>
        <Image x:Name="BG" Source="Images/background.png" MouseDown="BG_MouseDown" MouseUp="BG_MouseUp" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="UniformToFill"/>
