                <Paragraph x:Name="WebText" Margin="0">
                    <Run Text="Web Server is Waiting..."  Foreground="White" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox x:Name="DevBox" Margin="228,578,0,0" IsReadOnly="True" Background="Black" VerticalScrollBarVisibility="Visible" TextChanged="RTB_TextChanged" Height="178" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="935">
            <FlowDocument FontSize="14" FontFamily="Calibri" LineHeight="1">
                <Paragraph x:Name="DevText" Margin="0">
                    <Run Text="Compiler is Waiting..."  Foreground="White" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="23,19,0,0" Stroke="Black" VerticalAlignment="Top" Width="181" RadiusY="10" RadiusX="10" Fill="Black" Opacity="0.5" />
        <TextBlock x:Name="lb_error" FontSize="15" Foreground="White" HorizontalAlignment="Left" Margin="38,31,0,0" TextWrapping="NoWrap" Text="Error:" VerticalAlignment="Top" Height="20" Width="102" />
        <TextBlock x:Name="lb_warning" FontSize="15" Foreground="White" HorizontalAlignment="Left" Margin="38,48,0,0" TextWrapping="NoWrap" Text="Warning:" VerticalAlignment="Top" Height="20" Width="102" />
        <TextBlock x:Name="lb_sql" FontSize="15" Foreground="White" HorizontalAlignment="Left" Margin="38,65,0,0" TextWrapping="NoWrap" Text="SQL:" VerticalAlignment="Top" Height="20" Width="102" />
        <TextBlock x:Name="lb_debug" FontSize="15" Foreground="White" HorizontalAlignment="Left" Margin="38,81,0,0" TextWrapping="NoWrap" Text="Debug:" VerticalAlignment="Top" Height="20" Width="102" />
        <TextBlock x:Name="lb_online" FontSize="50" Foreground="White" HorizontalAlignment="Left" Margin="115,27,0,0" TextWrapping="NoWrap" Text="0" TextAlignment="Center" VerticalAlignment="Top" Height="64" Width="87" />
        <TextBlock FontSize="15" Foreground="White" HorizontalAlignment="Left" Margin="137,83,0,0" TextWrapping="NoWrap" Text="online" VerticalAlignment="Top" Height="20" Width="49" />
        <Button x:Name="ShowLogsBtn" Content="Logs" HorizontalAlignment="Left" Margin="23,122,0,0" VerticalAlignment="Top" Width="181" Click="ShowLogsBtn_Click" Height="20" />
        <Label x:Name="xBtn" Content="X" FontFamily="Calibri" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" MouseDown="XBtn_MouseDown" Height="25" Width="16" Margin="0,5,17,0" />
        <Label x:Name="MinimizeBtn" Content="_" FontFamily="Calibri" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,3,43,0" VerticalAlignment="Top" MouseDown="MinimizeBtn_MouseDown" Height="25" Width="16" />
        <TextBlock HorizontalAlignment="Right" Margin="0,4,70,0" FontSize="14" FontWeight="Bold" Foreground="Black" TextWrapping="Wrap" Text="rAthena Server Monitor By AoShinHo v1.0.5" VerticalAlignment="Top" Height="19" Width="293"/>
        <Grid x:Name='ROBGrid' HorizontalAlignment="Left" Width="422" Grid.ColumnSpan="2" Margin="1168,0,0,0" Height="600" VerticalAlignment="Top">
            <RichTextBox x:Name="NpmBox" Margin="2,305,0,0" IsReadOnly="True" Background="Black" VerticalScrollBarVisibility="Visible" TextChanged="RTB_TextChanged" Height="268" VerticalAlignment="Top" HorizontalAlignment="Left" Width="399">
