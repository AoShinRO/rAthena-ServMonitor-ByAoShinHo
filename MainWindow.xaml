                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF9D58" />
                        <GradientStop Color="#FFA46234" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.3" ShadowDepth="2.6" BlurRadius="3" />
                </Rectangle.Effect>
            </Rectangle>
            <Label x:Name="OptionWin" Content="      Options" FontSize="24" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Left" Margin="87,16,0,0" VerticalAlignment="Top" Height="40" Width="154" MouseDown="OptionWin_MouseDown" MouseEnter="OptionWin_MouseEnter" MouseLeave="OptionWin_MouseLeave" />
