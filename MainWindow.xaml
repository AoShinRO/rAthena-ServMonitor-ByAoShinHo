        </Grid>
        <RichTextBox x:Name="MapBox" Margin="228,28,0,0" IsReadOnly="True" Background="Black" VerticalScrollBarVisibility="Visible" TextChanged="RTB_TextChanged" Width="935" Height="178" VerticalAlignment="Top" HorizontalAlignment="Left">
            <FlowDocument FontSize="14" FontFamily="Calibri" LineHeight="1">
                <Paragraph x:Name="MapText" Margin="0">
                    <Run Text="Map Server is Waiting..."  Foreground="White" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox x:Name="LoginBox" Margin="228,333,0,0" IsReadOnly="True" Background="Black" VerticalScrollBarVisibility="Visible" TextChanged="RTB_TextChanged" Width="935" Height="117" VerticalAlignment="Top" HorizontalAlignment="Left">
            <FlowDocument FontSize="14" FontFamily="Calibri" LineHeight="1">
                <Paragraph x:Name="LoginText" Margin="0">
                    <Run Text="Login Server is Waiting..."  Foreground="White" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox x:Name="CharBox" Margin="228,211,0,0" IsReadOnly="True" Background="Black" VerticalScrollBarVisibility="Visible" TextChanged="RTB_TextChanged" HorizontalAlignment="Left" Width="935" Height="116" VerticalAlignment="Top">
