                    <Paragraph x:Name="NpmText" Margin="0">
                        <Run Text="Npm is Waiting..."  Foreground="White" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <RichTextBox x:Name="WSBox" Margin="2,32,0,0" IsReadOnly="True" Background="Black" VerticalScrollBarVisibility="Visible" TextChanged="RTB_TextChanged" HorizontalAlignment="Left" Width="399" Height="268" VerticalAlignment="Top">
