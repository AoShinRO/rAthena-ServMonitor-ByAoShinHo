            </Rectangle>
            <Label x:Name="StartROBBtn" Content="Start ROB" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="40" Width="154" MouseDown="StartROBBtn_MouseDown" MouseEnter="StartROBBtn_MouseEnter" MouseLeave="StartROBBtn_MouseLeave" />
        </Grid>
        <Grid x:Name="StartWS_Grid" Margin="23,0,1009,287" Height="64" VerticalAlignment="Bottom">
            <Rectangle x:Name="StartWS_Button" HorizontalAlignment="Left" Height="40" Margin="8,15,0,0" VerticalAlignment="Top" Width="156" RadiusY="5" RadiusX="5">
                <Rectangle.Fill>
