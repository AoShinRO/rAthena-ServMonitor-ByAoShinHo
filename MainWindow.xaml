            <Label x:Name="RestartBtn" Content="       Restart" FontSize="24" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Left" Margin="154,15,0,0" VerticalAlignment="Top" Height="40" Width="154" MouseDown="StartBtn_MouseDown" MouseEnter="RestartBtn_MouseEnter" MouseLeave="RestartBtn_MouseLeave"/>
        </Grid>
        <Grid x:Name="CompileGrid" Margin="25,0,0,-4" Grid.RowSpan="2" HorizontalAlignment="Left" Width="168" Height="89" VerticalAlignment="Bottom">
            <Rectangle x:Name="Compile_Button" HorizontalAlignment="Left" Height="40" Margin="8,15,0,0" VerticalAlignment="Top" Width="156" RadiusY="5" RadiusX="5">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
