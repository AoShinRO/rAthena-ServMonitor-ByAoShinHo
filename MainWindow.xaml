                        <GradientStop Color="#FFFF9D58" />
                        <GradientStop Color="#FFA46234" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.3" ShadowDepth="2.6" BlurRadius="3" />
                </Rectangle.Effect>
            </Rectangle>
            <Label x:Name="StartWSBtn" Content="Start WSProxy" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="40" Width="154" MouseDown="StartWSBtn_MouseDown" MouseEnter="StartWSBtn_MouseEnter" MouseLeave="StartWSBtn_MouseLeave" />
        </Grid>
        <Grid x:Name="CompileGrid_Rob" Margin="22,0,0,197" Height="64" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="168">
            <Rectangle x:Name="Compile_Button_Rob" HorizontalAlignment="Left" Height="40" Margin="8,15,0,0" VerticalAlignment="Top" Width="156" RadiusY="5" RadiusX="5">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF9D58" />
                        <GradientStop Color="#FFA46234" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.3" ShadowDepth="2.6" BlurRadius="3" />
                </Rectangle.Effect>
            </Rectangle>
            <Label x:Name="CompileBtn_Rob" Content="Build ROB" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Bold" FontFamily="Calibri" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="40" Width="154" MouseDown="CompileBtn_Rob_MouseDown" MouseEnter="CompileBtn_Rob_MouseEnter" MouseLeave="CompileBtn_Rob_MouseLeave" />
        </Grid>
    </Grid>
</Window>