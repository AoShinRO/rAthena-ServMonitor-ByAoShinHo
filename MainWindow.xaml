        </RichTextBox>
        <RichTextBox x:Name="WebBox" Margin="228,456,0,0" IsReadOnly="True" Background="Black" VerticalScrollBarVisibility="Visible" TextChanged="RTB_TextChanged" Width="935" Height="116" VerticalAlignment="Top" HorizontalAlignment="Left">
